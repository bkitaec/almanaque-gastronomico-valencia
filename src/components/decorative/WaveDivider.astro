---
interface Props {
  color?: string;
  flip?: boolean;
  className?: string;
}

const { color = '#f2ede7', flip = false, className = '' } = Astro.props;
---

<div class:list={['w-full overflow-hidden leading-none', flip && 'rotate-180', className]}>
  <svg
    class="w-full h-auto"
    viewBox="0 0 1440 80"
    fill="none"
    xmlns="http://www.w3.org/2000/svg"
    preserveAspectRatio="none"
  >
    <path
      d="M0 40C240 80 480 0 720 40C960 80 1200 0 1440 40V80H0V40Z"
      fill={color}
    />
  </svg>
</div>
